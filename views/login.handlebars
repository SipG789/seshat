<div class="card">
  <h3 class="card-header">Login</h3>
  <form id="login-form" class="card-body">
    <label class="form-label" for="email-login">Email</label>
    <input id="email-login" type="text" autofocus="true" />

    <label class="form-label" for="password-login">Password</label>
    <input id="password-login" type="password" autofocus="true" />

    <button type="submit" class="btn">login</button>
  </form>

<h3 class="card-header">Sign Up</h3>

  <form id="signup-form" class="card-body">
    <div>
      <label for="username-signup">Username</label>
      <input id="username-signup" type="text" />
    </div>
    <div>
      <label for="email-signup">Email</label>
      <input id="email-signup" type="text" />
    </div>
    <div>
      <label for="password-signup">Password</label>
      <input id="password-signup" type="password" />

    </div>
    <div>
      <button type="submit" class="btn">Signup!</button>
    </div>
  </form>

</div>

<script src="/javascript/login.js"></script>